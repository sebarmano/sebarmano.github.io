<!doctype html>
<html>
  <head>
    <%= stylesheet_link_tag "blog" %>
    <%= stylesheet_link_tag "highlighting" %>
    <meta charset="utf-8" />
    <link href='http://fonts.googleapis.com/css?family=Oxygen:400,300,700'
      rel='stylesheet' type='text/css'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body>
    <div id="main" role="main">
      <div class="blog-wrapper">
        <%= partial "partials/nav" %>
        <%= yield %>
        <%= partial "partials/footer" %>
      </div>
    </div>
    <%= google_analytics_universal_tag %>
  </body>
</html>
