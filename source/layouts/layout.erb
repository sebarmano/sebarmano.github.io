            <li class="nav-link"><%= link_to "Volunteering & Social", "#volunteering" %></li>
            <li class="nav-link"><%= link_to "About Me", "#about" %></li>
            <li class="nav-link"><%= link_to "Contact Me", "#about" %></li>
            <li class="nav-link"><%= link_to "Blog", "/blog" %></li>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>

    <footer class="footer">
      <div class="content-wrapper">
        <div class="footer-2" role="contentinfo">
          <ul>
            <li>Â©Copyright Sebastian Armano 2016</li>
          </ul>

          <div class="footer-secondary-links">
            <ul>
              <li><%= link_to "Created with Middleman", "https://middlemanapp.com/" %></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <%= google_analytics_universal_tag %>
  </body>
</html>



